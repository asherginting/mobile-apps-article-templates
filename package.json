{
  "name": "@guardian/mobile-apps-article-templates",
  "version": "1.0.0",
  "description": "Templates for articles on both iOS and Android next-gen apps",
  "main": "ArticleTemplates/",
  "scripts": {
    "setup": "if [ ! -d .git/info ]; then  mkdir -p .git/info; fi; echo ArticleTemplates/assets/css/ >> .git/info/exclude && echo ArticleTemplates/assets/build/ >> .git/info/exclude",
    "test": "grunt karma",
    "validate": "grunt sasslint && grunt jshint",
    "buildJS": "grunt buildJS",
    "buildCSS": "grunt buildCSS",
    "build": "yarn buildJS && yarn buildCSS",
    "sync": "yarn build && grunt rsync",
    "develop": "grunt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guardian/mobile-apps-article-templates.git"
  },
  "keywords": [
    "guardian",
    "mobile",
    "template"
  ],
  "bugs": {
    "url": "https://github.com/guardian/mobile-apps-article-templates/issues"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "grunt": "^0.4.5",
    "grunt-contrib-cssmin": "^0.14.0",
    "grunt-contrib-jshint": "^1.0.0",
    "grunt-contrib-requirejs": "^0.4.4",
    "grunt-contrib-watch": "^0.6.1",
    "grunt-karma": "^0.12.1",
    "grunt-notify": "^0.4.1",
    "grunt-parallel": "^0.5.1",
    "grunt-rsync": "^0.6.2",
    "grunt-sass": "^2.0.0",
    "grunt-sass-lint": "^0.2.2",
    "grunt-shell": "^1.1.1",
    "jshint-summary": "^0.4.0",
    "karma": "^0.13.21",
    "karma-chai-sinon": "^0.1.5",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^1.1.5",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-requirejs": "^0.2.5",
    "karma-story-reporter": "^0.3.1",
    "load-grunt-tasks": "^2.0.0",
    "mocha": "^2.4.5",
    "requirejs": "^2.3.3",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
    "squirejs": "^0.2.1"
  },
  "dependencies": {
    "d3": "^3.5.4",
    "domready": "^1.0.7",
    "fastclick": "^1.0.6",
    "fence": "git://github.com/guardian/fence",
    "smooth-scroll": "git://github.com/cferdinandi/smooth-scroll"
  },
  "engines": {
    "node": "6.9.2"
  }
}
